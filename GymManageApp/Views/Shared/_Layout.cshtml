<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assessment</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">

</head>

<body>
    <div class="d-flex flex-column flex-md-row align-items-center justify-content-between p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
        <div class="container">
            <nav class="my-2 my-md-0 me-md-3">
                <a class="p-2 text-dark" href="#">@Html.ActionLink("Add WorkOrder", "Create", "WorkOrders")</a>
                <a class="p-2 text-dark" href="#">@Html.ActionLink("WorkOrders List", "Index", "WorkOrders")</a>
            </nav>
            <div class="d-flex align-items-center">
                <a class="position-relative">
                </a>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>
    <div class="d-flex flex-column flex-md-row align-items-center justify-content-between p-3 px-md-4 mb-3 bg-body border-bottom shadow-sm">
        <div class="container text-justify text-center">
            <p>&copy; @DateTime.Now.Year - Assessment - 2021</p>
        </div>
    </div>
    <div id="count-modal" class="modal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">WorkOrders Count : </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="font-weight:bolder;text-align:center;font-size : 20px;">
                    <p id="wo-count"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/bootstrap-notify.js"></script>
    <script src="~/Scripts/site.js"></script>
    <script>
        var intervalId = window.setInterval(function () {
            GetWorkOrders();
        }, 9000);
    </script>
    @{ if (TempData["messageNotifySuccess"] != null && !string.IsNullOrEmpty(TempData["messageNotifySuccess"].ToString()))
        {
            <script>
                if ($(".alert-infos").length === 0) {
                    NotifyUtilisateur("success", "@TempData["messageNotifySuccess"].ToString()")
                }
                else {
                    $('.alert-infos .message').html('@TempData["messageNotifySuccess"].ToString()').removeClass("hide").addClass("show");
                    $('.alert-infos').addClass("alert-success").removeClass("hide").addClass("show");
                }

            </script>
        }
        else if (TempData["messageNotifyError"] != null && !string.IsNullOrEmpty(TempData["messageNotifyError"].ToString()))
        {
            <script>
                if ($(".alert-infos").length === 0) {
                    NotifyUtilisateur("error", "@TempData["messageNotifyError"].ToString()")
                }
                else {
                    $('.alert-infos .message').html('@TempData["messageNotifyError"].ToString()').removeClass("hide").addClass("show");
                    $('.alert-infos').addClass("alert-danger").removeClass("hide").addClass("show");
                }
            </script>
        } }


    @RenderSection("scripts", required: false)


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</body>
</html>
