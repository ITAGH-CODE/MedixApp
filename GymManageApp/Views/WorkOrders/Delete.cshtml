@model GymManageApp.DAL.WorkOrders

@{
    ViewBag.Title = "Delete";
}

<div class="container" style="margin-top : 50px;">
    <div class="card">
        <div class="card-header">
            Are you sure you want to delete this ?
        </div>
        <div class="card-body">

            @using (Html.BeginForm("DeleteWO", "WorkOrders", new { Id = Model.WorkOrderId }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label><i>Work Order Number</i></label><br />
                    <label>@Model.WorkOrderNumber</label>
                </div>
                <div class="form-group">
                    <label><i>Client</i></label><br />
                    <label>@Model.Clients.Name</label>
                </div>
                <div class="form-group">
                    <label><i>State</i></label><br />
                    <label>@Model.States.Code</label>
                </div>
                <div class="form-group">
                    <label><i>Status</i></label><br />
                    <label>@Model.Status.Name</label>
                </div>
                <div class="form-group">
                    <label><i>ETA</i></label><br />
                    <label>@Model.ETA</label>
                </div>
                <div class="form-group">
                    <label>Creation date</label>
                    <label>@Model.CreatedDate</label>
                </div>
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> 
                    @Html.ActionLink("Back to List", "Index",null, new { @class = "btn btn-success" })
                </div>
            }
        </div>
    </div>
</div>
    
