@model  IPagedList< GymManageApp.DAL.WorkOrders >

@{
    ViewBag.Title = "Index";
}

@using PagedList.Mvc;
@using PagedList;

<div class="container" style="margin-top : 100px;">
    <div class="card">
        <div class="card-header">
            Work Orders
        </div>
        <div>
            <table id="dtBasicExample" class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().WorkOrderNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Clients.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().States.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().Status.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().CreatedDate)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkOrderNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Clients.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.States.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedDate)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.WorkOrderId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.WorkOrderId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
            @Html.PagedListPager(Model, i => Url.Action("Index", "WorkOrders", new { i, search = Request.QueryString["search"] }), new PagedListRenderOptions()
                {
                    LiElementClasses = new List<string> { "btn", "btn-light ml-1" }
                })
        </div>
    </div>



