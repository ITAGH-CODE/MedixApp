@model GymManageApp.DAL.WorkOrders

<div class="container" style="margin-top : 100px;">
    <div class="card">
        <div class="card-header">
            Add WorkOrder
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "WorkOrders", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal new-client-div">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.HiddenFor(model => model.WorkOrderId, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.HiddenFor(model => model.WorkOrderId, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.WorkOrderNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Work Order Number ..." } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => Model.ClientId, new SelectList(ViewBag.ClientId, "Value", "Text"),"Select client ...", htmlAttributes: new { @class = "form-control", id = "Client" })


                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => Model.StateId, new SelectList(ViewBag.StateId, "Value", "Text"),"Select state ...", htmlAttributes: new { @class = "form-control", id = "State" })
                            @Html.ValidationMessageFor(model => model.StateId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => Model.StatusId, new SelectList(ViewBag.StatusId, "Value", "Text"),"Select status", htmlAttributes: new { @class = "form-control", id = "State" })
                            @Html.ValidationMessageFor(model => model.StatusId, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input id="btnCreateClient" type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div>
        @Html.ActionLink("Back", "Index", null, new { @class = "title-page" })
        <label id="lblHiddenLabel"></label>
    </div>
</div>


